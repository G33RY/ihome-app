<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/number_input_image_minus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/icon_change_bg"
        android:backgroundTint="@color/dimmed_text"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:src="@drawable/ic_minus"
        app:tint="@color/white" />

    <EditText
        android:id="@+id/number_input_edit_text_number"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:clickable="false"
        android:enabled="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="12"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/number_input_image_plus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/icon_change_bg"
        android:backgroundTint="@color/dimmed_text"
        android:baselineAlignBottom="false"
        android:clickable="true"
        android:src="@drawable/ic_plus"
        app:tint="@color/white" />

</LinearLayout>